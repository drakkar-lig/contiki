all: udp-server udp-client relay

CFLAGS += -DPROJECT_CONF_H=\"project-conf.h\"
CONTIKI_WITH_RPL = 0
CONTIKI_WITH_LRP = 1

relay: CFLAGS += -DLRP_IS_COORDINATOR=1
relay: CFLAGS += -DLRP_IS_SINK=0

udp-server: CFLAGS += -DLRP_IS_COORDINATOR=1
udp-server: CFLAGS += -DLRP_IS_SINK=1

udp-client: CFLAGS += -DLRP_IS_COORDINATOR=1
udp-client: CFLAGS += -DLRP_IS_SINK=0

CFLAGS += -DUIP_CONF_IPV6=1
CFLAGS += -DUIP_CONF_IPV6_LRP=1
CFLAGS += -DUIP_CONF_IPV6_RPL=0

CFLAGS += -DUIP_CONF_ROUTER=1
CFLAGS += -DUIP_CONF_ND6_SEND_NA=0
CFLAGS += -DRESOLV_CONF_SUPPORTS_MDNS=0

CONTIKI = ../..
include $(CONTIKI)/Makefile.include
